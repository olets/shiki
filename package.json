{
  "name": "@olets/shiki-monorepo",
  "packageManager": "bun@1.1.25",
  "private": true,
  "scripts": {
    "build": "turbo build check-types",
    "check-types": "tsc --noEmit",
    "eleventy-plugin-shiki-twoslash": "bun run --filter @olets/eleventy-plugin-shiki-twoslash",
    "remark-shiki-twoslash": "bun run --filter @olets/remark-shiki-twoslash",
    "shiki-twoslash": "bun run --filter @olets/shiki-twoslash",
    "shiki": "bun run --filter @olets/shiki"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "turbo": "^2.2.3"
  }
}
